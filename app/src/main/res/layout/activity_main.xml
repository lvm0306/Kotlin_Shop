<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView android:layout_width="match_parent" android:layout_height="match_parent" android:src="@drawable/bg1" android:scaleType="centerCrop"/>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <TextView
                android:id="@+id/tv_title"
                android:textSize="18sp"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:text="欢迎使用老郭菜店系统"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/tv_weather"
                android:textSize="12sp"
                android:textColor="#ffffffff"
                android:gravity="right|bottom"
                android:text="2019年7月10日  天气：多云转晴，28°"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:background="@color/mainbg"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">
        <!--菜单列表-->
        <LinearLayout
                android:layout_width="80dp"
                android:background="@drawable/shape_menu_bg"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tv_menu1"
                    android:textSize="16sp"
                    android:background="#aaffffff"
                    android:textColor="#464447"
                    android:layout_height="50dp"
                    android:text="点单"
                    android:gravity="center"
                    android:layout_width="match_parent"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/mainbg"/>
            <TextView
                    android:id="@+id/tv_menu3"
                    android:textSize="16sp"
                    android:background="#aa464447"
                    android:textColor="#fff"
                    android:layout_height="50dp"
                    android:text="已点菜单"
                    android:gravity="center"
                    android:layout_width="match_parent"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/mainbg"/>

            <TextView
                    android:id="@+id/tv_menu2"
                    android:textSize="16sp"
                    android:background="#aa464447"
                    android:textColor="#fff"
                    android:layout_height="50dp"
                    android:text="菜品管理"
                    android:gravity="center"
                    android:layout_width="match_parent"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/mainbg"/>
                    <TextView
                    android:id="@+id/tv_menu4"
                    android:textSize="16sp"
                    android:background="#aa464447"
                    android:textColor="#fff"
                    android:layout_height="50dp"
                    android:text="商户管理"
                    android:gravity="center"
                    android:layout_width="match_parent"/>
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/mainbg"/>
        </LinearLayout>
        <!--点单-->
        <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/ll_order"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:background="@color/greybg"
                    android:layout_height="match_parent">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp">
                    <Spinner
                            android:id="@+id/customer_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textColor="#000"
                            android:background="@drawable/shape_menu_title_bg"
                            android:spinnerMode="dropdown">

                    </Spinner>
                    <TextView
                            android:visibility="gone"
                            android:text="已选列表√"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:textColor="#000"
                            android:background="@drawable/shape_menu_title_bg"
                            android:layout_height="30dp"/>
                    <TextView android:gravity="center"
                              android:text="提交订单"
                              android:textColor="#fff"
                              android:layout_centerVertical="true"
                              android:background="@drawable/shape_menu_commit_bg"
                              android:layout_alignParentRight="true"
                              android:layout_width="wrap_content"
                              android:layout_height="30dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                        android:layout_marginTop="40dp"
                        android:id="@+id/rv_menu"
                        android:layout_width="match_parent"
                        tools:itemCount="6"
                        tools:listitem="@layout/item_menu"
                        tools:layoutManager="LinearLayoutManager"
                        android:layout_marginBottom="40dp"
                        android:layout_height="wrap_content"/>
                <LinearLayout
                        android:background="@color/whiteht"
                        android:layout_width="match_parent"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:layout_height="40dp">
                    <TextView android:layout_width="0dp"
                              android:layout_weight="1"
                              android:id="@+id/tv_goodnum"
                              android:paddingRight="5dp"
                              android:text="共0件货物"
                              android:textSize="12sp"
                              android:textColor="#333"
                              android:gravity="center"
                              android:layout_height="match_parent"/>
                    <TextView android:layout_width="0dp"
                              android:text="总计:0.00元"
                              android:gravity="center"
                              android:textSize="14sp"
                              android:id="@+id/tv_pay"
                              android:textColor="#f00"
                              android:paddingLeft="5dp"
                              android:layout_weight="1"
                              android:layout_height="match_parent"/>
                </LinearLayout>
            </RelativeLayout>
            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="@color/mainbg"/>
            <LinearLayout

                    android:background="@color/greybg"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                <LinearLayout android:layout_width="match_parent"
                              android:gravity="center"
                              android:layout_height="40dp">
                    <TextView
                            android:text="菜品种类"
                            android:gravity="center"
                            android:textColor="#000"
                            android:background="@drawable/shape_menu_title_bg"
                            android:layout_width="80dp"
                            android:layout_height="30dp"/>
                </LinearLayout>
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_item"
                        android:layout_width="match_parent"
                        tools:itemCount="12"
                        tools:listitem="@layout/item_fruit"
                        tools:spanCount="3"
                        tools:layoutManager="GridLayoutManager"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                    android:visibility="gone"
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

            </LinearLayout>

        </LinearLayout>

        <!-- 已点菜单-->
        <LinearLayout
                android:id="@+id/ll_commit_order"
                android:orientation="vertical"
                android:background="@color/mainbg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="40dp">

                <TextView
                        android:text="已点菜单"
                        android:background="@drawable/shape_menu_title_bg"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>


                <TextView
                        android:text="+"
                        android:background="@drawable/shape_custom_add_bg"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>


            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_commit_order"
                    android:layout_width="match_parent"
                    tools:itemCount="12"
                    tools:listitem="@layout/item_fruit"
                    tools:spanCount="3"
                    tools:layoutManager="GridLayoutManager"
                    android:layout_height="match_parent"/>
        </LinearLayout>

        <!-- 修改菜品-->
        <LinearLayout
                android:id="@+id/ll_change_fruit"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/mainbg"
                android:visibility="gone"
                android:layout_height="match_parent">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="40dp">

                <TextView
                        android:text="菜品管理"
                        android:background="@drawable/shape_menu_title_bg"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>


                <TextView
                        android:text="+"
                        android:background="@drawable/shape_custom_add_bg"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>


            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_change_fruit"
                    android:layout_width="match_parent"
                    tools:itemCount="12"
                    tools:listitem="@layout/item_fruit"
                    tools:spanCount="6"
                    tools:layoutManager="GridLayoutManager"
                    android:layout_height="match_parent"/>
        </LinearLayout>
        <!-- 商户管理-->
        <LinearLayout
                android:background="@color/mainbg"
                android:id="@+id/ll_customer_control"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="40dp">

                <TextView
                        android:text="商户管理"
                        android:background="@drawable/shape_menu_title_bg"
                        android:gravity="center"
                        android:textColor="#000"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>


                <TextView
                        android:text="+"
                        android:background="@drawable/shape_custom_add_bg"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"/>


            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_customer_control"
                    android:layout_width="match_parent"
                    tools:itemCount="12"
                    tools:listitem="@layout/item_fruit"
                    tools:spanCount="3"
                    tools:layoutManager="GridLayoutManager"
                    android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</RelativeLayout>