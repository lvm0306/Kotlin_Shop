<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/shape_dialog_bg"
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent"
              android:layout_height="40dp"
              android:text="菜名："
              android:id="@+id/tv_name"
              android:paddingRight="10dp"
              android:textColor="@color/grey37"
              android:gravity="center"
              android:textSize="16sp"
              android:layout_weight="1"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:text="数量："
                  android:paddingRight="10dp"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_weight="1"/>
        <EditText android:layout_width="0dp"
                  android:background="#ffff"
                  android:id="@+id/et_count"
                  android:layout_height="match_parent"
                  android:paddingLeft="10dp"
                  android:hint="请输入数量"
                  android:inputType="number|numberDecimal"
                  android:gravity="start|center_vertical"
                  android:textSize="16sp"
                  android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:text="单价："
                  android:paddingRight="10dp"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_weight="1"/>
        <EditText android:layout_width="0dp"
                  android:background="#ffff"
                  android:id="@+id/et_unit_price"
                  android:layout_height="match_parent"
                  android:paddingLeft="10dp"
                  android:hint="请输入单价"
                  android:gravity="start|center_vertical"
                  android:inputType="numberDecimal|number"
                  android:textSize="16sp"
                  android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:text="单位："
                  android:paddingRight="10dp"
                  android:gravity="center"
                  android:textSize="16sp"
                  android:layout_weight="1"/>
        <EditText android:layout_width="0dp"
                  android:background="#ffff"
                  android:id="@+id/et_unit"
                  android:layout_height="match_parent"
                  android:paddingLeft="10dp"
                  android:hint="请输入单位"
                  android:gravity="start|center_vertical"
                  android:textSize="16sp"
                  android:layout_weight="1"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#9999"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        <Button android:layout_width="0dp"
                android:id="@+id/tv_cancel"
                android:layout_height="match_parent"
                android:background="#fff"
                android:text="取消"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"/>
        <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#9999"/>

        <Button android:layout_width="0dp"
                android:id="@+id/tv_sure"
                android:background="#fff"
                android:layout_height="match_parent"
                android:textColor="#FFA500"
                android:text="确定"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>